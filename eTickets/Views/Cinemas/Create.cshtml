@model CinemasViewModel
@{
    ViewData["Title"] = "Add New Cinema";
}

<div class="row text">
    <div class="row text" style="margin-bottom: 190px;">
        <div class="col-md-8 offset-2">
        <p>
                <h1>Add a New Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>

                        <partial name="_partialviews/_CreateEditPartailView" />

                    <div class="form-group mt-3 d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" asp-action="index">Show All</a>
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
@section Scripts {

    <script>

        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();
        })
    </script>
    <partial name="_ValidationScriptsPartial" />
}

