@model IReadOnlyList<CinemasViewModel>
@{
    ViewData["Title"] = "List Of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@Cinema.Logo" alt="@Cinema.Name" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @Cinema.Name
                        </td>
                        <td class="align-middle">
                            @Cinema.Description
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>|
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>|
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>

</div>


