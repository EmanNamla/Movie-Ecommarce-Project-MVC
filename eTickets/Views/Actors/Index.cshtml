@model IReadOnlyList<ActorsViewModel>
@{
    ViewData["Title"] = "List Of Actors";
}

<div style="position:fixed;right:25px;bottom:25px;" class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>ProfilePictureURl</th>
                    <th>FullName</th>
                    <th>Bio</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var Actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@Actor.ProfilePictureUrl" alt="@Actor.FullName" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @Actor.FullName
                        </td>
                        <td class="align-middle">
                            @Actor.Bio
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Actor.Id"><i class="bi bi-pencil-square"></i>Edit</a>|
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@Actor.Id"><i class="bi bi-eye"></i>Details</a>|
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Actor.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>

</div>



